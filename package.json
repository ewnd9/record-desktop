{
  "name": "record-desktop-monorepo",
  "private": true,
  "description": "Record gifs and take screenshots on linux, built with electron.",
  "main": "packages/record-desktop-electron/src/dist/main.js",
  "scripts": {
    "precommit": "npm run lint",
    "lint": "eslint 'packages/*/src/**/*.js'",
    "build:cpp": "bash scripts/x11-screenshot/build.sh",
    "build:electron-app": "cd packages/record-desktop-electron && yarn build",
    "build:electron-deb": "rm -rf dist-pkg && node scripts/buildElectronDeb"
  },
  "bin": {
    "record-desktop": "app.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewnd9/record-desktop.git"
  },
  "keywords": [
    "gif",
    "electron",
    "linux"
  ],
  "files": [
    "src",
    "app.js",
    "cat.sh"
  ],
  "author": "ewnd9 <ewndnine@gmail.com>",
  "license": "MIT",
  "resolutions": {
    "electron/**/sumchecker": "2.0.2"
  },
  "dependencies": {
    "electron": "^1.8.4"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bootstrap": "3.x",
    "css-loader": "^0.28.11",
    "electron-installer-debian": "^2.0.0",
    "electron-packager": "^14.0.5",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "json-loader": "^0.5.7",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.2",
    "proxyquire": "^2.0.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-router": "3.x",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "x11": "^2.3.0"
  }
}
